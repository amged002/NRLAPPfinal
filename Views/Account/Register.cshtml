@using NRLApp.Models.Account
@model RegisterViewModel
@{
    ViewData["Title"] = "Registrer deg";
}

<div class="container d-flex justify-content-center align-items-start login-shell">
    <div class="card shadow-sm login-card mt-3" style="max-width: 420px; width:100%;">
        <div class="card-body p-4 p-md-5">
            <h1 class="h3 text-center mb-4">Registrer deg</h1>

            <form asp-action="Register" method="post" autocomplete="on" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email"
                 class="form-control form-control-lg"
                 autocomplete="email"
                 inputmode="email"
                 autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control form-control-lg" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-lg w-100 nla-primary">Opprett konto</button>

                <div class="text-center mt-3">
                    <small>Har du allerede konto? <a asp-action="Login">Logg inn</a></small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


