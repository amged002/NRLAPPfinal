@model IEnumerable<NRLApp.Models.ObstacleListItem>
@{
    ViewData["Title"] = "Registrerte hindre";
}

<div class="screen">
    <h2>REGISTRERTE HINDRE</h2>

    @if (!Model.Any())
    {
        <p class="text-muted">Ingen innsendelser ennå.</p>
    }
    else
    {
        <table class="table table-striped table-sm align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tid (UTC)</th>
                    <th>Type</th>
                    <th>Høyde</th>
                    <th>Radius</th>
                    <th>Lat</th>
                    <th>Lng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Id</td>
                        <td>@x.CreatedUtc.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@x.Type</td>
                        <td>@(x.HeightMaxMeters is null ? $"{x.HeightMinMeters} m+" : $"{x.HeightMinMeters}–{x.HeightMaxMeters} m")</td>
                        <td>@x.RadiusMeters m</td>
                        <td>@x.CenterLat</td>
                        <td>@x.CenterLng</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div style="margin-top:12px;">
        <a class="btn btn-outline-secondary" href="@Url.Action("Area", "Obstacle")">Registrer nytt</a>
    </div>
</div>