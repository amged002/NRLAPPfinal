@model IEnumerable<NRLApp.Models.ObstacleListItem>
@{
    ViewData["Title"] = "Registrerte hindere";
}

<h2>Registrerte hindere</h2>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Hinder</th>
            <th>HÃ¸yde (m)</th>
            <th>Status</th>
            <th>Registrert</th>
            <th>Vis</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@(string.IsNullOrWhiteSpace(x.ObstacleName) ? "(uten navn)" : x.ObstacleName)</td>
                <td>@(x.HeightMeters?.ToString() ?? "-")</td>
                <td>
                    @if (x.IsDraft)
                    {
                        <span class="badge bg-secondary">Utkast</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Innsendt</span>
                    }
                </td>
                <td>@x.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>

                <!-- ðŸ”¹ Her er "Vis"-kolonnen -->
                <td>
                    <a asp-controller="Obstacle"
                       asp-action="Vis"
                       asp-route-id="@x.Id"
                       class="btn btn-sm btn-primary">
                        Vis
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
