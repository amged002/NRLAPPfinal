@model NRLApp.Models.AdminRoleListVm
@{
    ViewData["Title"] = "Administrer roller";
    var roles = ViewBag.AssignableRoles as string[] ?? Array.Empty<string>();

    // Samme e-post som vi beskytter i controlleren
    var protectedAdminEmails = new[] { "admin@nrl.local" };
}

<div class="screen">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="mb-0">Brukerroller</h1>
        <p class="text-muted mb-0">Sett rolle til Pilot, Crew eller Approver.</p>
    </div>

    @if (TempData["Status"] is string status)
    {
        <div class="alert alert-success">@status</div>
    }

    @if (TempData["Error"] is string error)
    {
        <div class="alert alert-danger">@error</div>
    }

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>E-post</th>
                    <th class="w-25">Gjeldende rolle</th>
                    <th class="w-25">Ny rolle</th>
                    <th class="text-end">Slett</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    var isProtected = !string.IsNullOrWhiteSpace(user.Email)
                    && protectedAdminEmails.Contains(user.Email, StringComparer.OrdinalIgnoreCase);

                    <tr>
                        <td>@(user.Email ?? "(uten e-post)")</td>
                        <td>
                            @if (string.IsNullOrWhiteSpace(user.CurrentRole))
                            {
                                <span class="text-muted">Ingen satt</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">@user.CurrentRole</span>
                            }
                        </td>
                        <td>
                            <form asp-action="UpdateRole" method="post" class="d-flex gap-2 align-items-center">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="UserId" value="@user.UserId" />
                                <select name="Role" class="form-select">
                                    @foreach (var role in roles)
                                    {
                                        <option value="@role" selected="@(string.Equals(role, user.CurrentRole, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">
                                            @role
                                        </option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary">Oppdater</button>
                            </form>
                        </td>
                        <td class="text-end">
                            @if (isProtected)
                            {
                                <span class="text-muted">Kan ikke slettes</span>
                            }
                            else
                            {
                                <form asp-action="DeleteUser"
                                      method="post"
                                      onsubmit="return confirm('Er du sikker på at du vil slette denne brukeren?');"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@user.UserId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        Slett
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
