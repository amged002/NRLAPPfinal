@{
    var currentController = (string?)ViewContext.RouteData.Values["controller"] ?? "";
    // true når vi er på Account-sider (Login/Registrer) → da vil vi skjule menyen
    var hideMenu = string.Equals(currentController, "Account", StringComparison.OrdinalIgnoreCase);

    // Enkel visning av innlogget bruker (bruker e-post som base)
    string? userEmail = User?.Identity?.IsAuthenticated == true ? User.Identity!.Name : null;
    string? userNameShort = null;
    string? userInitials = null;

    if (!string.IsNullOrWhiteSpace(userEmail))
    {
        // vis bare delen før @ som "navn"
        var atIndex = userEmail.IndexOf('@');
        userNameShort = atIndex > 0 ? userEmail[..atIndex] : userEmail;

        // Gjør første bokstav i navnet stor (real -> Real)
        if (!string.IsNullOrWhiteSpace(userNameShort))
        {
            userNameShort = char.ToUpper(userNameShort[0]) +
                            (userNameShort.Length > 1 ? userNameShort[1..] : string.Empty);
        }

        // lag 2 initialer (første og evt. første etter punktum/underscore)
        var parts = userNameShort.Split(new[] { '.', '_', ' ' }, StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1)
        {
            userInitials = parts[0].Length >= 2
                ? (parts[0][0].ToString() + parts[0][1].ToString()).ToUpperInvariant()
                : parts[0][0].ToString().ToUpperInvariant();
        }
        else
        {
            userInitials = (parts[0][0].ToString() + parts[1][0].ToString()).ToUpperInvariant();
        }
    }
}

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>@ViewData["Title"] - NRLApp</title>

    <!-- CSS: Bootstrap først, deretter vår egen -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- (valgfritt) Bootstrap Icons for logout-ikon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo (ikke lenke) -->
                <span class="navbar-brand d-flex align-items-center">
                    <img src="~/img/standard_Luftambulansen.png" class="brand-logo me-2" alt="Logo" />
                </span>

                <!-- Toggler for mobil -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Kollapsbart område -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    @* Menyen vises KUN når vi IKKE er på Account-sider *@
                    @if (!hideMenu)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Obstacle" asp-action="Area">Skjema</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Obstacle" asp-action="List">Registrerte</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Obstacle" asp-action="Map">Kart</a>
                            </li>
                        </ul>

                        @* Info om innlogget bruker + Logg ut-knapp til høyre *@
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <div class="ms-auto d-flex align-items-center gap-3">
                                <div class="user-info d-flex align-items-center">
                                    @if (!string.IsNullOrWhiteSpace(userInitials))
                                    {
                                        <div class="user-avatar me-2">
                                            @userInitials
                                        </div>
                                    }
                                    <div class="user-name text-truncate">
                                        @userNameShort
                                    </div>
                                </div>

                                <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm logout-btn">
                                        <i class="bi bi-box-arrow-right"></i> Logg ut
                                    </button>
                                </form>
                            </div>
                        }
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="@(hideMenu ? "pt-3 pb-3" : "pb-3")">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - NRLApp
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
