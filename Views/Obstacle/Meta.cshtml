@model NRLApp.Models.ObstacleMetaVm

@{
    ViewData["Title"] = "Registrer hinder";
}

<div class="screen">
    <div class="meta-header">
        <a asp-action="Area" class="back-link">← Tilbake</a>
        <h2>REGISTRER HINDER</h2>
        <div></div> 
    </div>

    <form asp-action="Meta" method="post" class="meta-form">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="ObstacleName">Hinder:</label>
            <input asp-for="ObstacleName" class="form-control" />
            <span asp-validation-for="ObstacleName" class="text-danger"></span>
        </div>

        <div class="form-row">
            <div class="form-group half">
                <label asp-for="HeightValue">Høyde:</label>
                <input asp-for="HeightValue" class="form-control" type="number" step="1" min="0" />
                <span asp-validation-for="HeightValue" class="text-danger"></span>
            </div>

            <div class="form-group half">
                <label asp-for="HeightUnit">Enhet:</label>
                <select asp-for="HeightUnit" class="form-control">
                    <option value="m">Meter (m)</option>
                    <option value="ft">Feet (ft)</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description">Beskrivelse:</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="actions">
            <button type="submit" name="action" value="draft" class="btn-secondary">
                Lagre utkast
            </button>
            <button type="submit" class="btn-primary">
                Send inn
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .screen {
        max-width: 900px;
        margin: 40px auto;
        padding: 30px 40px;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 0 25px rgba(0,0,0,0.08);
        box-sizing: border-box;
    }

    .meta-header {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        margin-bottom: 24px;
    }

        .meta-header h2 {
            text-align: center;
            font-size: 30px;
            margin: 0;
        }

    .back-link {
        justify-self: start;
        font-size: 14px;
        text-decoration: none;
        color: #0056b3;
        padding: 6px 10px;
        border-radius: 6px;
        background: #f1f5ff;
        border: 1px solid #d0dcff;
    }

        .back-link:hover {
            background: #e1ebff;
        }

    .meta-form {
        margin-top: 10px;
    }

    .form-group {
        margin-bottom: 18px;
        text-align: left;
    }

    .form-row {
        display: flex;
        gap: 16px;
    }

        .form-row .half {
            flex: 1;
        }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
    }

    .form-control {
        width: 100%;
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 8px 10px;
        font-size: 15px;
        box-sizing: border-box;
    }

    textarea.form-control {
        resize: vertical;
    }

    .text-danger {
        font-size: 13px;
    }

    .actions {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        gap: 12px;
    }

    .btn-secondary,
    .btn-primary {
        border-radius: 8px;
        padding: 10px 18px;
        font-size: 15px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        min-width: 140px;
    }

    .btn-secondary {
        background: #f5f5f5;
        color: #333;
        border: 1px solid #ddd;
    }

        .btn-secondary:hover {
            background: #e8e8e8;
        }

    .btn-primary {
        background: #004a92;
        color: white;
    }

        .btn-primary:hover {
            filter: brightness(0.95);
        }

    @@media (max-width: 600px) {
        .screen {
            margin: 20px;
            padding: 20px;
        }

        .form-row {
            flex-direction: column;
        }

        .actions {
            flex-direction: column;
            align-items: stretch;
        }

        .btn-secondary,
        .btn-primary {
            width: 100%;
        }
    }
</style>
