@model IEnumerable<NRLApp.Models.ObstacleListItem>

@{
    ViewData["Title"] = "Registrerte hindre";
}

<div class="screen">
    <h2>REGISTRERTE HINDRE</h2>

    <div class="obstacle-table-wrapper">
        <table class="table table-striped align-middle obstacle-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Hinder</th>
                    <th>Høyde (m)</th>
                    <th>Status</th>
                    <th>Registrert</th>
                    <th>Innmeldt av</th>
                    <th>Behandlet av</th>
                    <th>Vis</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.Id</td>
                            <td>@(string.IsNullOrWhiteSpace(x.ObstacleName) ? "(uten navn)" : x.ObstacleName)</td>
                            <td>@(x.HeightMeters?.ToString() ?? "-")</td>
                            <td>
                                @if (x.IsDraft)
                                {
                                    <span class="badge bg-secondary">Utkast</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Avventer</span>
                                }
                            </td>
                            <td>@x.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>

                            @* Ikke implementert ennå → vis “-” *@
                            <td>-</td>
                            <td>-</td>

                            <td>
                                <a asp-action="Details"
                                   asp-route-id="@x.Id"
                                   class="btn btn-primary btn-sm">
                                    Vis
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            Ingen hindre registrert ennå.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
