@*Skjema for valutakonvertering fra EUR til NOK*@
@model NRLApp.Models.CurrencyData
@{
    ViewData["Title"] = "Valutakonvertering";
}
<h2 class="mb-3">@ViewData["Title"]</h2>
<p class="text-muted">Konverter Euro (EUR) til Norske kroner (NOK)</p>

@*Post skjema for valutakonvertering*@
<form asp-action="Convert" asp-controller="Currency" method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    @*Beløp i Euro*@
    <div class="col-md-6">
        <label asp-for="EuroAmount" class="form-label"></label>
        <input asp-for="EuroAmount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="EuroAmount" class="text-danger"></span>
    </div>

    @*Dato for konvertering (valgfritt)*@
    <div class="col-md-6">
        <label asp-for="ConversionDate" class="form-label"></label>
        <input asp-for="ConversionDate" type="date" class="form-control" />
    </div>

    @*Send inn knapp*@
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Konverter</button>
    </div>
</form>

@*Vis resultat hvis beregning er gjort*@
@if (Model.NokAmount > 0)
{
    <div class="alert alert-success mt-4" role="alert">
        <h4 class="alert-heading">Resultat</h4>
        <hr>
        <p class="mb-1"><strong>Beløp i Euro:</strong> @Model.EuroAmount.ToString("N2") EUR</p>
        <p class="mb-1"><strong>Vekslingskurs:</strong> @Model.ExchangeRate.ToString("N2") NOK per EUR</p>
        <p class="mb-0"><strong>Beløp i Norske kroner:</strong> @Model.NokAmount.ToString("N2") NOK</p>
        @if (Model.ConversionDate.HasValue)
        {
            <p class="mb-0 mt-2"><small class="text-muted">Dato: @Model.ConversionDate.Value.ToString("dd.MM.yyyy")</small></p>
        }
    </div>
}

@section Scripts{ <partial name="_ValidationScriptsPartial" /> }
