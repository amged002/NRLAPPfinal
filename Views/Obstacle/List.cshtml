@using NRLApp.Models
@model IEnumerable<NRLApp.Models.ObstacleListItem>

@{
    ViewData["Title"] = "Registrerte hindere";
}

<h2>Registrerte hindere</h2>

<div class="obstacle-table-wrapper">
    <table class="table table-striped align-middle obstacle-table">
    <thead>
        <tr>
            <th>#</th>
            <th>Hinder</th>
            <th>HÃ¸yde (m)</th>
            <th>Status</th>
            <th>Registrert</th>
            <th>Innmeldt av</th>
            <th>Behandlet av</th>
            <th>Vis</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@(string.IsNullOrWhiteSpace(x.ObstacleName) ? "(uten navn)" : x.ObstacleName)</td>
                <td>@(x.HeightMeters?.ToString() ?? "-")</td>
                <td>
                    @{
                        var badgeClass = "bg-secondary";
                        var badgeText = "Utkast";

                        if (!x.IsDraft)
                        {
                            badgeClass = "bg-warning text-dark";
                            badgeText = "Avventer";

                            if (x.ReviewStatus == ObstacleStatus.Approved)
                            {
                                badgeClass = "bg-success";
                                badgeText = "Godkjent";
                            }
                            else if (x.ReviewStatus == ObstacleStatus.Rejected)
                            {
                                badgeClass = "bg-danger";
                                badgeText = "Avvist";
                            }
                        }
                    }

                    <span class="badge @badgeClass">@badgeText</span>

                    @if (!string.IsNullOrWhiteSpace(x.ReviewComment))
                    {
                        <span class="badge bg-success ms-1">Innsendt</span>
                        <div class="small text-muted mt-1">@x.ReviewComment</div>
                    }
                </td>
                <td>@x.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(string.IsNullOrWhiteSpace(x.CreatedByUserName) ? "-" : x.CreatedByUserName)</td>
                <td>@(string.IsNullOrWhiteSpace(x.AssignedToUserName) ? "-" : x.AssignedToUserName)</td>

                <td>
                    <a asp-controller="Obstacle"
                       asp-action="Vis"
                       asp-route-id="@x.Id"
                       class="btn btn-sm btn-primary">
                        Vis
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>