@using NRLApp.Models
@{
    ViewData["Title"] = "Registrer høyde";
    var err = TempData["FlashError"] as string;
}
<div class="screen">
    <h2>REGISTRER HØYDE</h2>

    @* Vis feilmelding hvis noe manglet i forrige steg *@
    @if (!string.IsNullOrEmpty(err))
    {
        <div class="alert alert-danger" role="alert">@err</div>
    }

    <form asp-action="Height" method="post" id="heightForm">
        @Html.AntiForgeryToken()

        <!-- Skjult felt som faktisk postes til controlleren -->
        <input type="hidden" name="height" id="heightSelected" />

        <div class="grid-tiles" id="heightTiles">
            <button type="button" class="tile" data-val="@HeightBand.H0_15">0–15<br />METER</button>
            <button type="button" class="tile" data-val="@HeightBand.H15_30">15–30<br />METER</button>
            <button type="button" class="tile" data-val="@HeightBand.H30_50">30–50<br />METER</button>
            <button type="button" class="tile" data-val="@HeightBand.H50_75">50–75<br />METER</button>
            <button type="button" class="tile" data-val="@HeightBand.H75_100">75–100<br />METER</button>
            <button type="button" class="tile" data-val="@HeightBand.H100Plus">100+<br />METER</button>
        </div>

        <button type="submit" class="btn-next" id="submitBtn" disabled>SEND INN</button>
    </form>
</div>

@section Scripts {
    <script>
        (function(){
          const tiles = document.querySelectorAll('#heightTiles .tile');
          const hidden = document.getElementById('heightSelected');
          const submit = document.getElementById('submitBtn');

          tiles.forEach(t => {
            t.addEventListener('click', () => {
              // fjern valgt-stil fra andre
              tiles.forEach(x => x.classList.remove('selected'));
              // marker valgt
              t.classList.add('selected');
              // sett skjult felt til enum-verdien som tekst
              hidden.value = t.dataset.val;
              // aktiver submit
              submit.disabled = false;
            });
          });
        })();
    </script>
    <style>
        /* enkel visuell "valgt" tilstand */
        .tile.selected {
            outline: 3px solid #1e88e5;
            transform: scale(1.02);
        }
    </style>
}
